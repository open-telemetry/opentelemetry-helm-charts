        },
        "maxReplicas": {
          "type": "integer"
        },
        "behavior": {
          "type": "object"
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer"
        },
        "additionalMetrics": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "required": [
