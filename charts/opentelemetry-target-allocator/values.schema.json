{
  "$schema": "http://json-schema.org/schema#",
  "$ref": "#/definitions/top",
  "definitions": {
    "top": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "targetAllocator": {
          "$ref": "#/definitions/TargetAllocator"
        },
        "nameOverride": {
          "type": "string"
        },
        "fullnameOverride": {
          "type": "string"
        }
      },
      "title": "top"
    },
    "TargetAllocator": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1
        },
        "image": {
          "$ref": "#/definitions/ContainerImage"
        },
        "imagePullSecrets": {
          "type": "array"
        },
        "serviceAccount": {
          "$ref": "#/definitions/ServiceAccount"
        },
        "podSecurityContext": {
          "$ref": "#/definitions/SecurityContext"
        },
        "securityContext": {
          "$ref": "#/definitions/SecurityContext"
        },
        "resources": {
          "$ref": "#/definitions/Resources"
        },
        "livenessProbe": {
          "$ref": "#/definitions/Probe"
        },
        "readinessProbe": {
          "$ref": "#/definitions/Probe"
        },
        "startupProbe": {
          "$ref": "#/definitions/Probe"
        },
        "nodeSelector": {
          "$ref": "#/definitions/Annotations"
        },
        "tolerations": {
          "type": "array"
        },
        "affinity": {
          "type": "object",
          "additionalProperties": true
        },
        "podAnnotations": {
          "$ref": "#/definitions/Annotations"
        },
        "podLabels": {
          "$ref": "#/definitions/Annotations"
        },
        "priorityClassName": {
          "type": "string"
        },
        "topologySpreadConstraints": {
          "type": "array"
        },
        "config": {
          "$ref": "#/definitions/Config"
        }
      },
      "title": "TargetAllocator"
    },
    "ContainerImage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "Never", "IfNotPresent"]
        }
      }
    },
    "SecurityContext": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer"
        },
        "runAsGroup": {
          "type": "integer"
        },
        "fsGroup": {
          "type": "integer"
        },
        "allowPrivilegeEscalation": {
          "type": "boolean"
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        },
        "capabilities": {
          "type": "object",
          "additionalProperties": true
        },
        "seccompProfile": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "Resources": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "limits": {
          "$ref": "#/definitions/ResourceLimits"
        },
        "requests": {
          "$ref": "#/definitions/ResourceLimits"
        }
      }
    },
    "ResourceLimits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cpu": {
          "type": "string"
        },
        "memory": {
          "type": "string"
        }
      }
    },
    "Probe": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "httpGet": {
          "type": "object",
          "additionalProperties": true
        },
        "initialDelaySeconds": {
          "type": "integer"
        },
        "periodSeconds": {
          "type": "integer"
        },
        "timeoutSeconds": {
          "type": "integer"
        },
        "failureThreshold": {
          "type": "integer"
        },
        "successThreshold": {
          "type": "integer"
        }
      }
    },
    "Config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allocation_strategy": {
          "type": "string"
        },
        "collector_namespace": {
          "type": "string"
        },
        "collector_selector": {
          "$ref": "#/definitions/CollectorSelector"
        },
        "prometheus_cr": {
          "$ref": "#/definitions/PrometheusCR"
        },
        "config": {
          "$ref": "#/definitions/PrometheusConfig"
        },
        "filter_strategy": {
          "type": "string"
        },
        "scrape_configs": {
          "type": "array"
        }
      },
      "title": "Config"
    },
    "CollectorSelector": {
      "type": "object",
      "additionalProperties": true,
      "title": "CollectorSelector"
    },
    "Matchlabels": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "component": {
          "type": "string"
        }
      },
      "title": "Matchlabels"
    },
    "PrometheusConfig": {
      "type": "object",
      "additionalProperties": true
    },
    "PrometheusCR": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "scrapeInterval": {
          "type": "string"
        },
        "service_monitor_selector": {
          "$ref": "#/definitions/Annotations"
        },
        "pod_monitor_selector": {
          "$ref": "#/definitions/Annotations"
        }
      },
      "title": "PrometheusCR"
    },
    "Annotations": {
      "type": "object",
      "additionalProperties": true,
      "title": "Annotations"
    },
    "ServiceAccount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "annotations": {
          "$ref": "#/definitions/Annotations"
        }
      },
      "title": "ServiceAccount"
    }
  }
}
