{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "fullnameOverride": {
            "type": "string"
        },
        "nameOverride": {
            "type": "string"
        },
        "targetAllocator": {
            "type": "object",
            "properties": {
                "config": {
                    "type": "object",
                    "properties": {
                        "allocation_strategy": {
                            "type": "string"
                        },
                        "config": {
                            "type": "object",
                            "properties": {
                                "scrape_configs": {
                                    "type": "array"
                                }
                            }
                        },
                        "filter_strategy": {
                            "type": "string"
                        },
                        "prometheus_cr": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "pod_monitor_selector": {
                                    "type": "object"
                                },
                                "scrapeInterval": {
                                    "type": "string"
                                },
                                "service_monitor_selector": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "imagePullSecrets": {
                    "type": "array"
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
